package a1;

public class MainClass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Person myrtw = new Person("Myrtrquh OQLAURAEWBHw", "Kampa", 20); //
		
		
		
		Person mixalis = new Person("Mixalis", "Lappas", 20); // 
		Person antonis = new Person("Antonis", "Antonakopoylos", 100);
		Person Anna = new Person("Anna", "Annastasaki", 19);
		Person Matina = new Person("Matina", "mantarinaki", 29);
		
		myrtw.name = "Myrtw";
		
		//String onomata[] = new String[5];
		String onomata[] = {"Myrtw", "Mixalis", "Antonis", "Anna", "Matina"};
		String last_name[]= { "Lappas","Lappas", "Antonakopoylos", "Annastasaki", "Mantarinaki"};
		int age[]= {20,20,100,19,29};
		// to idio gia ta epitheta
		// to idio gia tis hlikies
		
		// meta thes na ftiakseis enan pinaka me 3 Person
		Person anthrwpoi[] = new Person[4];
		
		anthrwpoi[0] = new Person(onomata[0], last_name[0], age[0]);
		anthrwpoi[1] = mixalis;
		anthrwpoi[2] = myrtw;
		anthrwpoi[3] = Anna;
		
		
	
		
		myrtw.greet("Alexis"); 
		mixalis.greet("Giorgos"); 
		antonis.greet("Antonela");
		
		
	}

}
