package a1;
public class Person {
	//dhlwsh xarakthristikwn-metavlhtwn
	int age;
	String name = "Mixalis";
	String last_name;
	
	// constructor einai h synarthsh poy kaleitai kata th dhmioyrgia enos antikeimenoy ayths ths klashs
	// xrhsimopoioyme ton constructor gia na arxikopoihsoyme ta xarakthristika toy antikeimenoy
	Person(String name, String last_name, int age){
		//System.out.println("Person's constructor called " + n);
		
		this.name = name;
		this.last_name = last_name;
		this.age = age;
	}
	
	
	// symperifores-synarthseis
	void greet(String name)
	{
		//System.out.println("my name is " + name + " " + last_name + " and i am " + age +" years old" );
		System.out.printf("Hi my name is %s %s and I am %d years old\n", last_name, name, age);
	}
}
